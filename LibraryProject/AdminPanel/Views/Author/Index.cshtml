@model IEnumerable<AuthorViewModel>
@{
    ViewData["Title"] = "Index";
}

<h1>Authors</h1>
<br />
<a asp-action="Create" class="btn btn-primary "> Add New Author</a>
@if (Model?.Count() > 0)
{
    <table class="table table-striped table-hover mt-3">
        <thead>
            <tr>
                <th> AuthorCode</th>
                <th>Author Name</th>
                <th>Brief</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>

        </thead>
        <tbody>
            @foreach (var d in Model)
            {
                <tr>
                    <td>@d.Id</td>
                    <td>@d.Name</td>
                    <td>@d.Description</td>
                    <partial name="ButtonPartialView" model="d.Id" />
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-warning text-center mt-3">
        <h3>No Authors Found</h3>
    </div>
}



