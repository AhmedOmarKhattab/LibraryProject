@model IEnumerable<Book>
@if (Model?.Count() > 0)
{
    <table class="table table-striped table-hover mt-3">
        <thead>
            <tr>
                <th>Book Image</th>
                <th>Title</th>
                <th>Description</th>
                <th>Price</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var E in Model)
            {
                <tr>
                    <td><img src="~/files/Images/@E.PictureUrl" class="img-fluid rounded" alt="Employee Image" /></td>

                    <td>@E.Title</td>
                    <td>@E.Description</td>
                    <td>@E.Price</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-warning text-center mt-3">
        <h3>No Books Found</h3>
    </div>
}